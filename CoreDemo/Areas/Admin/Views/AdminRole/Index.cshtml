@using EntityLayer.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<body>

    <div id="wrapper">

        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <h5>Roles</h5>
                        </div>
                        <div class="ibox-content">

                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td><a href="/Admin/AdminRole/DeleteRole/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                            <td><a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-outline-success">Update</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminRole/AddRole/" class="btn btn-outline-primary">Add New Role</a>
                            <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-info">User Role List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>

