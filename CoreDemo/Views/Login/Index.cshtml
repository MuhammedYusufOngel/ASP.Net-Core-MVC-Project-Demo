@model UserSignInViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
	<div class="container" style="max-width: 400px;">
		<br />
		<br />
		<br />
		<h3 class="tittle">Şimdi Giriş Yap</h3>
		<div style="text-align: center; margin-top: 3em;">
			<div style="text-align: center;">
				<form method="post" asp-action="Index">
					<div class="col-lg-12">
						<div class="form-group">
							<label for="exampleInputEmail1 mb-2">Kullanıcı Adı</label>
							<input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="@Model.username" placeholder="" required="">
						</div>
					</div>

					<div class="col-lg-12">
						<div class="form-group"
							<label for="exampleInputPassword1 mb-2">Şifre</label>
							<input type="password" class="form-control" id="exampleInputPassword1" asp-for="@Model.password" placeholder="" required="">
						</div>
					</div>
					<button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
					<p><a href="~/Register/Index/"> Hesabın yok mu?</a></p>
				</form>
			</div>
		</div>
		<br />
		<br />
		<br />
	</div>
</section>