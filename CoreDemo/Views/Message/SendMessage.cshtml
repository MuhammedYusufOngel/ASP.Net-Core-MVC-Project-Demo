@model EntityLayer.Concrete.Message2


@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Create New Message</h1>
<br />
@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
    @Html.Label("Receiver")
    @Html.DropDownListFor(x => x.SenderID, (List<SelectListItem>)ViewBag.users, new { @class = "form-control"})
    <br />
    <br />
    @Html.Label("Subject")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control"})
    <br />
    <br />
    @Html.Label("Message Details")
    @Html.TextAreaFor(x => x.MessageDetails, 10, 3, new { @class = "form-control"})
    <br />
    <br />

    <button type="submit" class="btn btn-primary submit mb-4">Send Message</button>
}

