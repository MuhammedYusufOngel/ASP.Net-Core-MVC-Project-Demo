
<div class="tech-btm">
	<h4>Subscribe to our newsletter</h4>
	<p>Subscribe to be informed about the latest technological events. </p>
	<form method="post">
		<input type="email" id="Mail" placeholder="Email" required="" name="Mail">
		<input type="submit" id="btnSubmit" value="Subscribe">
	</form>

</div>


<script type="text/javascript">

	$("#btnSubmit").click(function () {
		let values = {
			Mail: $("#Mail").val()
		};

		$.ajax({
			type: "post",
			url: "/NewsLetter/SubscribeMail/",
			data: values,
			success: function (func) {
				let result = jQuery.parseJSON(func)
			}
		})
	})
</script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>